<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Toolbar-->
    <style name="Widget.Base.AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.AppTheme.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppTheme.Toolbar.Subtitle</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="popupTheme">@style/Widget.AppTheme.PopMenu</item>
        <item name="android:theme">@style/ThemeOverlay.AppTheme.Dark.ActionBar</item>
    </style>

    <style name="TextAppearance.AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AppTheme.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppTheme.PopMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:listSelector">@drawable/drawable_pop_menu_item_background</item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/drawable_pop_menu_item_background
        </item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="colorControlHighlight">@color/light_gray</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Button-->
    <style name="Widget.Base.AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/drawable_btn_default</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Widget.Button</item>
    </style>

    <style name="TextAppearance.AppTheme.Widget.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/color_btn_text_default</item>
    </style>

    <!--TabLayout-->
    <style name="Widget.AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextAppearance.Widget.AppTheme.TabLayout</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TextAppearance.Widget.AppTheme.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!--AppBarLayout-->
    <style name="Widget.AppTheme.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:theme">@style/Widget.AppTheme.ActionBar</item>
    </style>

    <style name="Widget.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>