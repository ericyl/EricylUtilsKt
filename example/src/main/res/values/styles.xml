<resources>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.Translucent" parent="AppTheme" />

    <style name="AppTheme.Search" parent="AppTheme" />

    <style name="AppTheme.Splash" parent="Base.AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Base-->
    <style name="Base.AppTheme" parent="Base.Theme.AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorButtonActive">?colorPrimaryDark</item>-->
        <!--<item name="colorButtonInactive">@color/gray</item>-->
    </style>

    <style name="Base.AppTheme.NoActionBar" parent="Base.Theme.AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">?colorPrimary</item>
        <item name="colorPrimaryDark">?colorPrimaryDark</item>
        <item name="colorAccent">?colorAccent</item>
        <item name="toolbarStyle">@style/Widget.Base.AppTheme.Toolbar</item>
        <item name="buttonStyle">@style/Widget.Base.AppTheme.Button</item>
    </style>

</resources>
